@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Ad"></label>
                <input asp-for="Input.Ad" class="form-control" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Soyad"></label>
                <input asp-for="Input.Soyad" class="form-control" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DogumTarihi"></label>
                <input asp-for="Input.DogumTarihi" class="form-control" />
                <span asp-validation-for="Input.DogumTarihi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Adres"></label>
                <input asp-for="Input.Adres" class=" form-control" />
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Sehir"></label>
                <input asp-for="Input.Sehir" class="form-control" />
                <span asp-validation-for="Input.Sehir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
